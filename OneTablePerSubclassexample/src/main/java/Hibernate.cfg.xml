<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="dialect">org.hibernate.dialect.HSQLDialect</property>
<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
<property name="connection.url">jdbc:hsqldb:hsql://localhost/</property>
<property name="connection.username">SA</property>
<property name="connection.password"></property>
<property name="show_sql">true</property>
<property name="hibernate.hbm2ddl.auto">create-drop</property>
<mapping class="com.HibernateAnnotation2.OneTablePerSubclassexample.Sports" />
<mapping class="com.HibernateAnnotation2.OneTablePerSubclassexample.Cricket" />
<mapping class="com.HibernateAnnotation2.OneTablePerSubclassexample.Badminton" />
</session-factory>
</hibernate-configuration>
